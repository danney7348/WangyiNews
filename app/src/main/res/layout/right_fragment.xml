<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/iv_heitouxiang"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:src="@drawable/datouxiang"
            android:layout_height="80dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="立即登录"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:text="赢积分 抢大奖"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/huang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/yuedutupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="阅读"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/shoucangtupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="收藏"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/gentietp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="跟帖"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- 下面是空白展示-->
    <RelativeLayout
        android:background="@color/baise_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 下面是条目展示-->
        <LinearLayout

            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shangchengtupian"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:text="商城"
                android:textColor="@color/ziti333"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/ziti666"
                android:text="能赚能花，土豪当家"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_below="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/huodongtupian"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:text="活动"
                android:textColor="@color/ziti333"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/ziti666"
                android:text="大人，这是你的SSR吗？"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_below="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/youxitupian"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <TextView
                android:textColor="@color/ziti333"
                android:layout_marginLeft="10dp"
                android:text="游戏"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/ziti666"
                android:text="部落冲突：皇室战争来袭"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>



        <!--下面是底部-->

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/shangtoutiaotupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="上头条"
                    android:gravity="center"
                    android:textColor="@color/ziti666"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/xiaoxitupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="消息"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/youjiantupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="邮件"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/gongyitupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="公益"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/caipiaotupian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="彩票"
                    android:textColor="@color/ziti666"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout><!--底部-->



    </RelativeLayout>


</LinearLayout>